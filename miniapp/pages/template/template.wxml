<template name="default">
 <view class="edu-no-data">
     <view class="edu-nodata-one">
       <image src="../../assets/images/no-data.png" class="edu-nodata-img"></image>
     </view>
     <view class="edu-nodata-l">
        <label class="edu-nodata-wu">{{message ? message : '暂无相关数据'}}</label>
     </view>
 </view>
</template>

<template name="default_content">
 <view class="edu-no-data" style='padding-top:50rpx;padding-bottom:50rpx'>
     <view class="edu-nodata-one">
       <image src="../../assets/images/no-data.png" class="edu-nodata-img"></image>
     </view>
     <view class="edu-nodata-l">
        <label class="edu-nodata-wu">{{message ? message : '暂无相关数据'}}</label>
     </view>
 </view>
</template>

<template name="navbar">
 <view class="edu-no-data">
      <image wx:if="{{showbtn == 1}}" src="{{imgurl ? imgurl : '../../assets/images/fanhui-icon.png'}}" class="edu-nav-img" bindtap='backpage' data-url="{{pageurl}}"/>  
    {{title}}
 </view>
</template>