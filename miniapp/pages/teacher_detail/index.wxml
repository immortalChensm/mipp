              <text class="edu-info-bt">福泉茶苑喝茶</text>
          </view>
          <view class="edu-info-section">
                <video id="myVideo" class="edu-info-video-a" src="http://wxsnsdy.tc.qq.com/105/20210/snsdyvideodownload?filekey=30280201010421301f0201690402534804102ca905ce620b1241b726bc41dcff44e00204012882540400&bizid=1023&hy=SH&fileparam=302c020101042530230204136ffd93020457e3c4ff02024ef202031e8d7f02030f42400204045a320a0201000400" danmu-list="{{danmuList}}" show-fullscreen-btn  initial-time  controls></video>
                <text class="edu-info-bt">福泉茶苑喝茶</text>
          </view>
          <view class="edu-info-section"> 
               <video id="myVideo" class="edu-info-video-a" src="http://wxsnsdy.tc.qq.com/105/20210/snsdyvideodownload?filekey=30280201010421301f0201690402534804102ca905ce620b1241b726bc41dcff44e00204012882540400&bizid=1023&hy=SH&fileparam=302c020101042530230204136ffd93020457e3c4ff02024ef202031e8d7f02030f42400204045a320a0201000400" danmu-list="{{danmuList}}" show-fullscreen-btn  initial-time  controls></video>
                <text class="edu-info-bt">福泉茶苑喝茶</text>
          </view>
          <!-- </view> -->
      </view>
</view>
<!-- 视频介绍end -->
<!-- 间隔 -->
<view class="edu-space-a"></view>
<!-- 间隔end -->
<!-- 切换 -->
 <view class="edu-info-tab-panl edu-bottom-solid">
        <view class="{{selected1?'edu-info-list edu-info-select-q':'edu-info-list '}}" bindtap="selectTab1">老师详情</view>
        <view class="{{selected2?'edu-info-list edu-info-select-q':'edu-info-list'}}" bindtap="selectTab2">主要授课</view>
         <view class="{{selected3?'edu-info-list edu-info-select-q':'edu-info-list'}}" bindtap="selectTab3">学生评价</view> 
</view> 
