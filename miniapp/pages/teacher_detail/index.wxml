          <text class="edu-remm-kc">视频介绍</text>
          <image src="../../assets/images/remm-right-icon.png" class="edu-tj-icon"/>
      </view>
      <view class="edu-info-scroll">
         <!-- <view class="edu-info-gd"> -->
