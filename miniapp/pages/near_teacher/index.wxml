<!-- 分类筛选 start -->
<view class="edu-screen edu-border-top edu-bottom-solid">
      <view class="{{showkecd?'edu-screen-a edu-select-fl':'edu-screen-a edu-select-fl'}}" bindtap="showok">
          {{default_type}}
           <image src="../../assets/images/w-top-icon.png" class="{{showkecd?'edu-a-b edu-show':'edu-a-b edu-show'}}"/>
          <image src="../../assets/images/w-botton-icon.png" class="{{showkecd?'edu-a-b edu-none':'edu-a-b edu-none'}}"/> 
      </view>
      <view class="{{showkecda?'edu-screen-a edu-select-fl':'edu-screen-a'}}" bindtap="showxl">
          {{type_name}}
          <image src="../../assets/images/w-top-icon.png" class="{{showkecda?'edu-a-b edu-show':'edu-a-b edu-none'}}"/>
          <image src="../../assets/images/w-botton-icon.png" class="{{showkecda?'edu-a-b edu-none':'edu-a-b edu-show'}}"/>
      </view>
      <view class="edu-screen-a" bindtap="searchList" data-type="sale" data-val="{{cur_sale}}">
          销量
           <image src="../../assets/images/w-top-icon.png" class="edu-a-b" hidden="{{cur_sale == '1' ? false : true}}"/>
          <image src="../../assets/images/w-botton-icon.png" class="edu-a-b" hidden="{{cur_sale == '2' ? false : true}}"/> 
      </view>
</view>
<!-- 遮罩层 -->
    <view class="{{showkecd?'edu-mask':'edu-none'}}"></view> 
    <view class="{{showkecda?'edu-mask':'edu-none'}}"></view> 
<!-- 遮罩层 -->
<!-- 距离 -->
<view  class="{{showkecd?'edu-show edu-sty-qa':'edu-none'}}">
    <view class="edu-kc-list" bindtap="searchList" data-type="distance" data-val="" data-name="全部">
       <text class="edu-ke-c-name">全部</text>
       <view class="edu-success-icon edu-icon-we" hidden="{{cur_distance == '' ? false : true}}">
           <image src="../../assets/images/success-icon.png" class="edu-ty-sty edu-slect-succ"/>
       </view>
    </view>
    <view class="edu-kc-list" bindtap="searchList" data-type="distance" data-val="1" data-name="1km内">
       <text class="edu-ke-c-name">1km内</text>
       <view class="edu-success-icon edu-icon-we" hidden="{{cur_distance == '1' ? false : true}}">
            <image src="../../assets/images/success-icon.png" class="edu-ty-sty edu-slect-succ"/> 
       </view>
    </view>
    <view class="edu-kc-list" bindtap="searchList" data-type="distance" data-val="3" data-name="3km内">
       <text class="edu-ke-c-name">3km内</text>
       <view class="edu-success-icon edu-icon-we" hidden="{{cur_distance == '3' ? false : true}}">
           <image src="../../assets/images/success-icon.png" class="edu-ty-sty edu-slect-succ"/>
       </view>
    </view>
       <view class="edu-kc-list" bindtap="searchList" data-type="distance" data-val="5" data-name="3km内">
       <text class="edu-ke-c-name">5km内</text>
       <view class="edu-success-icon edu-icon-we" hidden="{{cur_distance == '5' ? false : true}}">
           <image src="../../assets/images/success-icon.png" class="edu-ty-sty edu-slect-succ"/>
       </view>
    </view>
</view>
<!-- 距离 end -->
<!-- 茶艺 -->
<view  class="{{showkecda?'edu-show edu-sty-qa':'edu-none'}}">
    <view class="edu-kc-list">
       <text class="edu-ke-c-name">全部</text>
       <view class="edu-success-icon edu-icon-we"  hidden="{{cur_type == '' ? false : true}}">
           <image src="../../assets/images/success-icon.png" class="edu-ty-sty edu-slect-succ"/>
       </view>
    </view>
    
    <view class="edu-kc-list" wx:for="{{teacher_type}}" wx:key="key" bindtap="searchList" data-type="type" data-val="{{item.id}}" data-name="{{item.name}}">
       <text class="edu-ke-c-name">{{item.name}}</text>
       <view class="edu-success-icon edu-icon-we"  hidden="{{cur_type == item.id ? false : true}}">
           <image src="../../assets/images/success-icon.png" class="edu-ty-sty edu-slect-succ"/>
       </view>
    </view>
</view>
<!-- 销量 end -->
<!-- 分类筛选 end -->
<!-- 金牌老师 start -->
<view class="edu-recommend-courses-tj">
   
    <!-- 列表 -->
     <view class="edu-acticle-list-tj-s edu-bottom-solid" wx:for="{{teacher_list}}"  wx:for-item="item" wx:key="key" bindtap="toTeacherDetail" data-id="{{item.id}}">
         <view class="edu-list-left-a">
            <image src="{{item.headimgurl}}" class="edu-list-img-a"/>
         </view>
          <view class="edu-list-right-a">
              <view class="edu-list-one">
                  <text class="edu-list-cy-name">{{item.name}}</text>
              </view>
              <view class="edu-list-two">
                <image src="../../assets/images/xing-icon.png"/>
                    <image src="../../assets/images/xing-icon.png"/>
                    <image src="../../assets/images/xing-icon.png"/>
                    <image src="../../assets/images/xing-icon.png"/>
                    <image src="../../assets/images/xing-icon.png"/>
                    <text>{{item.star}}</text>
              </view>
              <view class="edu-introduce">
                 <label>简介：{{item.profile}}</label>
              </view>
               <view class="edu-jl-list">
                 <label class="edu-tea-name">{{item.teach_type}}</label>
                  <label class="edu-sales edu-jl">
                    <image src="../../assets/images/gps-icon.png"  class="edu-gps"/>
                    {{item.distance}}
                  </label>
              </view>
          </view> 
     </view>  
       <!-- 列表end -->
</view>
<!-- 金牌老师 end -->