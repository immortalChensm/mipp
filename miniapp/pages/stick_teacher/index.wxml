<import src="../template/template.wxml"/>
<template is="navbar" data="{{...navdata}}"></template>

<!-- 金牌老师 start -->
<view class="edu-recommend-courses-tj" style='padding-top:0;'>
   
    <!-- 列表 -->
     <view class="edu-acticle-list-tj-s edu-border-top" wx:for="{{teacher_list}}" wx:for-item="item" wx:key="key" bindtap="toTeacherDetail" data-id="{{item.id}}">
         <view class="edu-list-left-a">
            <image src="{{item.headimgurl}}" class="edu-list-img-a"/>
         </view>
          <view class="edu-list-right-a">
              <view class="edu-list-one">
                  <text class="edu-list-cy-name">{{item.name}}</text>
              </view>
              <view class="edu-list-two" wx:if="{{item.star > 0 }}">
                 <block wx:for="{{item.stararr}}" wx:for-item="va" wx:for-key="k">
                  <image wx:if="{{va == 1 }}" src="../../assets/images/xing1.png"></image> 
                  <image wx:elif="{{va == 2 }}" src="../../assets/images/xing2.png"></image> 
                  <image wx:elif="{{va == 3 }}" src="../../assets/images/xing3.png"></image> 
                  <image wx:elif="{{va == 4 }}" src="../../assets/images/xing4.png"></image> 
                </block>
                <text>{{item.star}}</text>
              </view>
              <view class="edu-list-two" wx:if="{{item.star == 0 }}">
                <text style="color:#aaa">暂无评分</text>
              </view>
              <view class="edu-introduce">
                 <label>{{item.profile}}</label>
              </view>
               <view class="edu-jl-list">
                 <label class="edu-tea-name">{{item.teach_type}}</label>
                  <label class="edu-sales edu-jl">
                    <image src="../../assets/images/gps-icon.png"  class="edu-gps"/>
                    {{item.distance}}
                  </label>
              </view>
          </view> 
     </view>
     <template is="default" wx:if="{{teacher_list.length == 0}}" data="{{message:'暂无老师数据'}}"></template>
     <text class="edu-info-all"  wx:if="{{data_end}}">-- 没有更多老师数据啦 --</text>
       <!-- 列表end -->
</view>
<!-- 金牌老师 end -->