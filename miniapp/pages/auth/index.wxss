page{
  height: 100%;
}
.logo{
  height: 100%;
  text-align: center;
  position: relative;
  font-size: 14px;
  color:#666;
}
.logo image.logo{
  display: block;
  width:90px;
  height:90px;
  margin:80px auto 0;
}
.logoname{
  font-size: 20px;
  color:#333;
  padding: 20px 0 17px;
}
.logo button{
  position: absolute;
  left:10%;
  right:10%;
  height: 50px;
  color:#fff;
  font-size: 16px;
  line-height: 50px;
  text-align: center;
  border-radius: 5px;
  bottom:110px;
  background: #FF682D;
  border:none;
  z-index: 9;
}
.logo .home{
  position: absolute;
  right:10%;
  bottom:120px;
  z-index: 10;
  margin-right: -15px;
  background: #464649;
  height: 45px;
  width:45px;
  overflow: hidden;
  border-radius: 50%;
}
.logo .home image{
  height: 22px;
  width:22px;
  border-radius: 50%;
  display:block;
  margin:11px;
  overflow: hidden;
}

.shadow{
  padding-top: 3px;
}
.shadow::after{
  content:'';
  z-index: 100;
  bottom:0;
  box-shadow: inset 0 3px 3px #cecece;
  position: fixed;
  left:0;
  right:0;
  top:0;
  overflow: auto;
  height: 5px;
  -webkit-overflow-scrolling: touch;
}